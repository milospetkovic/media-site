{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import '@ezdesign/parts/slide.html.twig' as slide %}
{% import '@ezdesign/parts/content_field_macros.html.twig' as content_fields %}

<div class="view-type view-type-{{ view_type }} image vl3">
    {% set title = content_fields.title(content) %}

    <a href="{{ asset(netgen_remote_variation(content.innerContent, 'image', 'i1200').url) }}" title="{{ title }}" class="js-mfp-item">
        {{ slide.image(content) }}
    </a>
</div>
