{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import "@ezdesign/parts/macros.html.twig" as macros %}

{% block content %}
    <div class="{% if is_slider %}swiper-slide{% endif %} vl2">
        {% set image_uri = ng_image_alias(content.fields.image, 'i1200').uri|default('') %}

        <img {% if is_slider %}loading="lazy"{% endif %} src="{{ image_uri }}" />

        <div class="info">
            <h2 class="title">
                {{ macros.content_link(content, content.fields.title.value.text) }}
            </h2>
        </div>
    </div>
{% endblock %}
