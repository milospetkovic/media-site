{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import "@ezdesign/parts/macros.html.twig" as macros %}
{% set image = content.fieldValue('image') %}
{% set image_mobile = content.fieldValue('image_mobile') %}

{% block content %}
    <article class="view-component view-component-logo logo-style-2">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    {% if not content.fields.eyebrow_title.empty or not content.fields.title.empty %}
                        <header class="article-header">
                            {% if not content.fields.eyebrow_title.empty %}
                                <h4 class="eyebrow-title">
                                    {{ ng_render_field(content.fields.eyebrow_title) }}
                                </h4>
                            {% endif %}

                            {% if not content.fields.title.empty %}
                                <h2 class="title">
                                    {{ ng_render_field(content.fields.title)}}
                                </h2>
                            {% endif %}
                        </header>
                        {% if not content.fields.description.empty %}
                        <div class="short">
                            {{ ng_render_field(content.fields.description)}}
                        </div>
                        {% endif %}

                        {% if not content.fields.link_label.empty %}
                            <a href="#" class="btn btn-primary">{{ content.fields.link_label.value.text }}</a>
                        {% endif %}
                        {# {{ macros.content_link(content, content.fields.link_label.value.text, "btn btn-primary") }} #}
                    {% endif %}
                </div>
                <div class="col-md-6 offset-md-1">
                    {% set logos = content.filterFieldRelations('logos', ['ng_logo'], 6, 1) %}

                    <div class="logo-grid">
                    {% for logo in logos %}
                        <div class="logo-grid-item">
                            {% if not logo.fields.logo_svg.empty %}
                                <a href="{{ path(logo) }}">
                                    <img src="{{ asset(logo.fields.logo_svg.value.id, 'ezfile') }}" alt="{{ logo.name }}" />
                                </a>
                            {% endif %}
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </article>
{% endblock %}