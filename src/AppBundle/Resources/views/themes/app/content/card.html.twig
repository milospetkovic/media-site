{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import '@ezdesign/parts/content_field_macros.html.twig' as content_fields %}

<article class="view-type view-type-{{ view_type }} {{ content.contentInfo.contentTypeIdentifier|replace({'_': '-'}) }} vl8">
    {{ content_fields.image(content, location) }}

    <div class="article-content">
        <header class="article-header">
            <h2 class="title"><a href="{{ path(location) }}">{{ content_fields.title(content) }}</a></h2>
        </header>

        {% if with_intro|default(false) %}
            {{ content_fields.intro(content) }}
        {% endif %}
    </div>
</article>
