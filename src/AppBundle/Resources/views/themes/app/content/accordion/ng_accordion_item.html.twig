{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import "@ezdesign/parts/macros.html.twig" as macros %}

<article class="view-type view-type-{{ view_type }} ng-accordion-item vl10">

    <h3 class="title collapsed" data-toggle="collapse" data-target="#collapse-{{ location.id }}" aria-expanded="true" aria-controls="collapse-{{ location.id }}">
        {{ ng_render_field(content.fields.title) }}
    </h3>

    <div id="collapse-{{ location.id }}" class="collapse" aria-labelledby="heading-{{ location.id }}" data-parent=".list-accordion">
        <div class="short">
            {{ ng_render_field(content.fields.description) }}
        </div>
    </div>
</article>
