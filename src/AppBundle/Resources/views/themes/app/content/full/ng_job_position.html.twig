{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% extends nglayouts.layoutTemplate %}

{% import '@ezdesign/parts/content_field_macros.html.twig' as content_fields %}

{% if not content.fields.teaser_intro.empty %}
    {% set meta_data = {'description': content.fields.teaser_intro.value.xml.saveXML()|striptags|trim|truncate(152)} %}
{% elseif not content.fields.full_intro.empty %}
    {% set meta_data = {'description': content.fields.full_intro.value.xml.saveXML()|striptags|trim|truncate(152)} %}
{% endif %}

{% block content %}
    <article class="view-type view-type-{{ view_type }} ng-job-position">
        {% block article_header %}
            <header class="full-page-header">
                <div class="container">

                    <h1 class="full-page-title">{{ ng_render_field(content.fields.title) }}</h1>

                    <div class="full-page-info">
                        {% if not content.fields.job_location.empty %}
                            <span>{{ ng_render_field(content.fields.job_location) }}</span>
                        {% endif %}
                        {% if not content.fields.engagement_type.empty %}
                            <span>{{ ng_render_field(content.fields.engagement_type) }}</span>
                        {% endif %}
                        {% if not content.fields.application_deadline.empty %}
                            <span>Application deadline: {{ ng_render_field(content.fields.application_deadline) }}</span>
                        {% endif %}
                    </div>
                </div>
            </header>
        {% endblock %}

        <div class="container"><div class="row justify-content-center"><div class="col-lg-9">
            {% block image %}
                {% if not content.fields.image.empty %}
                    <div class="full-page-image">
                        {{ ng_render_field(content.fields.image) }}
                    </div>
                {% endif %}
            {% endblock %}


            {% block body %}
                <div class="full-page-body">
                    {% if not content.fields.full_intro.empty %}
                        <div class="full-page-intro">
                            {{ ng_render_field(content.fields.full_intro) }}
                        </div>
                    {% endif %}

                    {% if not content.fields.job_overview.empty %}
                        <h3>Job overview</h3>
                        {{ ng_render_field(content.fields.job_overview) }}
                    {% endif %}

                    {% if not content.fields.requirements.empty %}
                        <h3>Requirements</h3>
                        {{ ng_render_field(content.fields.requirements) }}
                    {% endif %}

                    {% if not content.fields.responsibilities.empty %}
                        <h3>Responsibilities</h3>
                        {{ ng_render_field(content.fields.responsibilities) }}
                    {% endif %}


                </div>
            {% endblock %}

        </div></div></div>
    </article>
{% endblock %}

{% block structuredData %}
    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "Article",
            "headline": "{{ content.fields.title.value.text }}",
            {% if content.contentInfo.publishedDate -%}
                "datePublished": "{{ content.contentInfo.publishedDate|date('Y-m-d') }}",
            {% endif -%}
            {% if not content.fields.image.empty -%}
                "image": "{{ absolute_url(ngsite_image_url(content, 'image', 'i1200'))   }}",
            {% endif -%}
            "publisher": {
                "type": "Organization",
                "name": "{{ site_name }}"
            }
        }
    </script>
{% endblock %}
